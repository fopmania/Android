<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"

    tools:context=".ControllerActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"></include>

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adViewController"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_bar" />

    <ImageButton
        android:id="@+id/btUp"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_marginTop="48dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/bt_up"
        app:layout_constraintStart_toEndOf="@+id/btLeft"
        app:layout_constraintTop_toBottomOf="@+id/app_bar" />


    <ImageButton
        android:id="@+id/btLeft"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/bt_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btUp" />

    <ImageButton
        android:id="@+id/btDown"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_marginTop="48dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/bt_down"
        app:layout_constraintStart_toEndOf="@+id/btLeft"
        app:layout_constraintTop_toBottomOf="@+id/btUp" />

    <ImageButton
        android:id="@+id/btRight"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginLeft="52dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/bt_right"
        app:layout_constraintStart_toEndOf="@+id/btLeft"
        app:layout_constraintTop_toBottomOf="@+id/btUp" />

    <ImageButton
        android:id="@+id/btT"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="48dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/bt_triangle"
        app:layout_constraintEnd_toStartOf="@+id/btO"
        app:layout_constraintTop_toBottomOf="@+id/app_bar" />

    <ImageButton
        android:id="@+id/btQ"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="60dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/bt_sqare"
        app:layout_constraintEnd_toStartOf="@+id/btO"
        app:layout_constraintTop_toBottomOf="@+id/btT" />

    <ImageButton
        android:id="@+id/btO"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/bt_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btT" />

    <ImageButton
        android:id="@+id/btX"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/bt_cross"
        app:layout_constraintEnd_toStartOf="@+id/btO"
        app:layout_constraintTop_toBottomOf="@+id/btT" />

    <ImageButton
        android:id="@+id/btSelect"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="190dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/bt_select"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/btStart"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginBottom="24dp"
        android:layout_marginRight="190dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/bt_start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>